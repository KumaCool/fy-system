$_url = '~@'
$_img = '~_img'
$_font = '~_font'

// 宽高大小
size($v, $range = false, $lineHeight = false)
    if $range && $range != 'line'
        {$range} $v
    if !$range || match('(width|line)$', $range)
        width $v
    if !$range || match('(height|line)$', $range)
        height $v
    if $lineHeight == 'line' || $range == 'line'
        line-height $v

// 圆角
// $position 圆角方向
radius($v = 5px, $position = false)
    if $v is a 'string'
        $position = $v
        $v = 5px
    if !($position is a 'string')
        border-radius $v
    else if match('top', $position)
        border-radius $v $v 0 0
    else if match('bottom', $position)
        border-radius 0 0 $v $v
    else if match('left', $position)
        border-radius $v 0 0 $v
    else if match('right', $position)
        border-radius 0 $v $v 0

// 阴影
shadow()
    $length = length(arguments)
    if $length > 3 || arguments == none
        box-shadow arguments
    else
        $x = 0px
        $y = 0px
        $blur = 5px
        $spread = 1px
        $color = $_color_shadow
        $surplus = arguments[3]
        $firstType = typeof(arguments)
        $secondType = $length == 2 ? typeof(arguments[1]) : false
        if $length == 1
            if $firstType == 'unit'
                $blur = arguments[0]
            if $firstType == 'rgba'
                $color = arguments[0]
        else if $length == 2
            if $firstType == 'rgba'
                $color = arguments[0]
                $surplus = arguments[1]
            else if $secondType == 'unit'
                $blur = arguments[0]
                $spread = arguments[1]
            else
                $blur = arguments[0]
                $color = arguments[1]
        else if $length == 3
            $thirdType = typeof(arguments[2])
            if $thirdType == 'unit'
                $x = arguments[0]
                $y = arguments[1]
                $blur = arguments[2]
            else
                if $firstType == 'unit'
                    $blur = arguments[0]
                if $secondType == 'unit'
                    $spread = arguments[1]
                else
                    $color = arguments[1]
                $surplus = arguments[2]
        box-shadow $x $y $blur $spread $color $surplus
